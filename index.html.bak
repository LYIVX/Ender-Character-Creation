          <div class="section-title">Social</div>
          <div class="social-content">
            <div>
              <div class="dot-row"><span class="stat-chip">Charisma</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Empathy</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Generosity</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Wealth</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Aggression</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Libido</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
