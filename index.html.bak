              <div class="dot-row"><span class="stat-chip">Happiness</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Spirituality</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Confidence</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
