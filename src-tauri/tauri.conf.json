{
  "build": {
    "beforeBuildCommand": "npm run build:web",
    "beforeDevCommand": "npm run dev:web",
    "devPath": "http://localhost:5174",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Character Creation",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "createDir": true,
        "scope": ["$APPDATA/Enderfall/**", "$LOCALDATA/Enderfall/**"]
      },
      "shell": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Character Creation",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "identifier": "com.characteratelier.sheet",
      "targets": "all",
      "icon": ["icons/icon.ico", "icons/icon.png"]
    }
  }
}
