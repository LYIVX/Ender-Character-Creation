              <div class="dot-row"><span class="stat-chip">Humor</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Anxiety</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Patience</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
              <div class="dot-row"><span class="stat-chip">Passion</span><div class="dots"><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /><input class="dot-input" type="checkbox" /></div></div>
            </div>
